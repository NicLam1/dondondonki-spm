{
  "version": 2,
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...slug].js" }
  ],
  "crons": [
    {
      "path": "/api/reminders/check",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/overdue/check",
      "schedule": "0 8 * * *"
    }
  ],
  "git": {
    "deploymentEnabled": false
  }
}


